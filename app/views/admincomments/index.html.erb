 <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<h1>All Comments</h1>
<p />
<table border="1">
  <thead>
    <tr>
      <th>Comment</th>
      <th>made by</th>
      <th>Created At</th>
      <th>last Updated</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user.email %></td>
        <td><%= time_ago_in_words(comment.created_at) %> Ago</td>
        <td><%= time_ago_in_words(comment.updated_at) %> Ago</td>
        <td><%= link_to 'Destroy', delete_admincomment_path(comment),  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



