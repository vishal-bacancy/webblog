<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", adminuser_path(@user) %></span>
      <p><b>Blogs:</b> <%= @user.blogs.count %></p>
    </section>
    <section class="stats">
      <%= render 'stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <p><%= link_to user.email, adminuser_path(user) %></p>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  
</div>